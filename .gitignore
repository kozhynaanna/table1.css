body{font-family: 'Noto Sans', sans-serif;
    background: #DCDCDC;
    margin: 5% 15% 5% 10%;
}
ul.menu{
    display: table;
    padding:0;
    background: #B3B3FF;
    height:70px;
}
ul.menu li {
    background:#B3B3FF;
    display: inline-block;
    height: 70px;
    width:368px;
    list-style: none;
    text-align: center;
}
ul.menu li a {
    text-decoration:none;
    display: block;
    padding: 15px 5px 5px 15px;
}
ul.menu li ul {
    display: none;
}
ul.menu li:hover {
    background: cadetblue;
    position: relative;
}
ul.menu li:hover > ul {
    display: block;
    position: absolute;
    top: 70px;
    left:-40px;
}
ul.menu li ul li{
    height: auto;
    width: 368px;
}
ul.menu li:hover ul li ul{
    position: absolute;
    top: 0;
    left: 328px;
}
table {
    background: #B3B3FF;
    height:70px;
    table-layout:fixed;
}

table, td, th {
    border: 1px solid #000;
    border-collapse: collapse;
}

#shp {
    background-color  :cornflowerblue;
    text-align: center;
    height: 70px;
}
.cht {
    background-color: lightsteelblue;
    text-align: center;
}
td {
    padding:15px 232px 15px 15px;
}
